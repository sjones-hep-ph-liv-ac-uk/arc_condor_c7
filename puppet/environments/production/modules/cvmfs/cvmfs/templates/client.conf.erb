# Created by puppet.  
CVMFS_CACHE_BASE=<%= @spool_store %>/<%= @repo %>/cache
CVMFS_RELOAD_SOCKETS=<%= @spool_store %>/<%= @repo %>/cache
CVMFS_QUOTA_LIMIT=4000
CVMFS_SERVER_URL=http://localhost/cvmfs/<%= @repo %>
CVMFS_HTTP_PROXY=DIRECT
CVMFS_PUBLIC_KEY=/etc/cvmfs/keys/<%= @repo %>.pub
CVMFS_TRUSTED_CERTS=/etc/cvmfs/repositories.d/<%= @repo %>/trusted_certs
CVMFS_CHECK_PERMISSIONS=yes
CVMFS_IGNORE_SIGNATURE=no
CVMFS_AUTO_UPDATE=no
CVMFS_NFS_SOURCE=no
<% if @clientuser -%>
CVMFS_USER=<%= @clientuser %>
<% end -%>
<% if @claim_ownership -%>
CVMFS_CLAIM_OWNERSHIP=yes
<% end -%>
CVMFS_HIDE_MAGIC_XATTRS=yes
CVMFS_FOLLOW_REDIRECTS=yes
CVMFS_SERVER_CACHE_MODE=yes
CVMFS_MOUNT_DIR=/cvmfs


