# Created by puppet, hands off.
CVMFS_CREATOR_VERSION=<%= @creator_version %>
CVMFS_REPOSITORY_NAME=<%= @repo %>
CVMFS_REPOSITORY_TYPE=stratum0
CVMFS_USER=<%= @user %>
CVMFS_UNION_DIR=/cvmfs/<%= @repo %>
CVMFS_SPOOL_DIR=<%= @spool_store %>/<%= @repo %>
CVMFS_STRATUM0=http://localhost/cvmfs/<%= @repo %>
CVMFS_UPSTREAM_STORAGE=local,<%= @repo_store %>/<%= @repo %>/data/txn,<%= @repo_store %>/<%= @repo %>
CVMFS_USE_FILE_CHUNKING=true
CVMFS_MIN_CHUNK_SIZE=4194304
CVMFS_AVG_CHUNK_SIZE=8388608
CVMFS_MAX_CHUNK_SIZE=16777216
CVMFS_CATALOG_ENTRY_WARN_THRESHOLD=500000
CVMFS_UNION_FS_TYPE=aufs
CVMFS_HASH_ALGORITHM=sha1
<% if @auto_tag -%>
CVMFS_AUTO_TAG=true
<% else -%>
CVMFS_AUTO_TAG=false
<% end -%>
<% if @garbage_collection -%>
CVMFS_GARBAGE_COLLECTION=true
<% else -%>
CVMFS_GARBAGE_COLLECTION=false
<% end -%>
<% if @auto_gc -%>
CVMFS_AUTO_GC=true
CVMFS_AUTO_GC_TIMESPAN='<%= @auto_gc_timespan %>'
<% else -%>
CVMFS_AUTO_GC=false
<% end -%>
CVMFS_AUTO_REPAIR_MOUNTPOINT=true
<% if @ignore_xdir_hardlinks -%>
CVMFS_IGNORE_XDIR_HARDLINKS=true
<% end -%>

